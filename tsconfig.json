{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "paths": {
      "@src/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@data/*": ["src/data/*"],
      "@config/*": ["src/config/*"],
      "@domain/*": ["src/domain/*"],
      "@infrastructure/*": ["src/infrastructure/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
